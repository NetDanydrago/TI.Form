<div class="footer">
  <a  class="logo">Preguntas en Total @TotalQuestion</a>
    <a  class="logo">Numero de la Pregunta @(IndexQuestion+1)</a>
  <div class="footer-right">
        @if(IndexQuestion == 0)
        {
            <a class="btn btn-success" @onclick="Next" href="#about">Siguiente</a>
        }
        else if(IndexQuestion == TotalQuestion-1)
        {
            <a class="btn btn-success" @onclick="Before" href="#contact">Anterior</a>
        }
        else
        {
            <a class="btn btn-success" @onclick="Before" href="#contact">Anterior</a>
            <a class="btn btn-success" @onclick="Next" href="#about">Siguiente</a>
        }

  </div>
</div>

@code{

    [Parameter]
    public int TotalQuestion { get; set; }

    [Parameter]
    public int IndexQuestion { get; set; } 

    [Parameter]
    public EventCallback<int> IndexQuestionChanged { get; set; }

    void Next()
    {
        if(IndexQuestion < TotalQuestion)
        {
            IndexQuestion++;
            IndexQuestionChanged.InvokeAsync(IndexQuestion);       
        }
    }

    void Before()
    {
        if(IndexQuestion > 0)
        {
            IndexQuestion--;
            IndexQuestionChanged.InvokeAsync(IndexQuestion);
        }
    }

}